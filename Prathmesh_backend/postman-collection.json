{
  "info": {
    "_postman_id": "prathmesh-blog-apis",
    "name": "Prathmesh Blog & Quote APIs",
    "description": "Complete API collection for Prathmesh Roadlines Blog and Quote management system",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Login (Get Admin Token)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@prathmesh.com\",\n  \"password\": \"any_password\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "login"]
            }
          },
          "description": "Login to get JWT token for admin operations"
        }
      ]
    },
    {
      "name": "Blog APIs",
      "item": [
        {
          "name": "Get All Blogs",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/blogs?page=1&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["api", "blogs"],
              "query": [
                {
                  "key": "page",
                  "value": "1",
                  "description": "Page number (default: 1)"
                },
                {
                  "key": "limit",
                  "value": "10",
                  "description": "Items per page (default: 10, max: 100)"
                }
              ]
            }
          },
          "description": "Fetch all blog posts with pagination and optional filtering"
        },
        {
          "name": "Get Blog by Slug",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/blogs/future-of-oil-transportation",
              "host": ["{{baseUrl}}"],
              "path": ["api", "blogs", "future-of-oil-transportation"]
            }
          },
          "description": "Fetch a single blog post by its slug"
        },
        {
          "name": "Get All Categories",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/blogs/categories/all",
              "host": ["{{baseUrl}}"],
              "path": ["api", "blogs", "categories", "all"]
            }
          },
          "description": "Fetch all blog categories with post counts"
        },
        {
          "name": "Create Blog (Admin)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"New Blog Post Title\",\n  \"slug\": \"new-blog-post-title\",\n  \"excerpt\": \"Brief description of the blog post\",\n  \"content\": \"Full blog content goes here with detailed information about the topic. This should be comprehensive and engaging content.\",\n  \"image\": \"https://example.com/image.jpg\",\n  \"author\": \"Admin\",\n  \"readTime\": \"5 min read\",\n  \"categories\": [1, 2],\n  \"tags\": [1, 3, 5]\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/api/admin/blogs",
              "host": ["{{baseUrl}}"],
              "path": ["api", "admin", "blogs"]
            }
          },
          "description": "Create a new blog post (Admin only)"
        },
        {
          "name": "Update Blog (Admin)",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Updated Blog Title\",\n  \"content\": \"Updated content with new information...\",\n  \"status\": \"published\",\n  \"categories\": [1, 3],\n  \"tags\": [2, 4]\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/api/admin/blogs/1",
              "host": ["{{baseUrl}}"],
              "path": ["api", "admin", "blogs", "1"]
            }
          },
          "description": "Update an existing blog post (Admin only)"
        },
        {
          "name": "Delete Blog (Admin)",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/admin/blogs/1",
              "host": ["{{baseUrl}}"],
              "path": ["api", "admin", "blogs", "1"]
            }
          },
          "description": "Delete a blog post (Admin only)"
        }
      ]
    },
    {
      "name": "Quote APIs",
      "item": [
        {
          "name": "Create Quote Request",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Rajesh Kumar\",\n  \"email\": \"rajesh@example.com\",\n  \"phone\": \"+919876543210\",\n  \"company\": \"Kumar Transport Co\",\n  \"from_location\": \"Mumbai, Maharashtra\",\n  \"to_location\": \"Delhi, NCR\",\n  \"product_type\": \"Edible Oil\",\n  \"quantity\": 5000,\n  \"unit\": \"Liters\",\n  \"message\": \"Need regular transportation for edible oil from Mumbai to Delhi\",\n  \"preferred_contact_method\": \"email\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/api/quotes",
              "host": ["{{baseUrl}}"],
              "path": ["api", "quotes"]
            }
          },
          "description": "Submit a new quote request (Public)"
        },
        {
          "name": "Get All Quotes (Admin)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/admin/quotes",
              "host": ["{{baseUrl}}"],
              "path": ["api", "admin", "quotes"]
            }
          },
          "description": "Get all quote requests (Admin only)"
        },
        {
          "name": "Update Quote Status (Admin)",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"contacted\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/api/admin/quotes/1/status",
              "host": ["{{baseUrl}}"],
              "path": ["api", "admin", "quotes", "1", "status"]
            }
          },
          "description": "Update quote status (Admin only)"
        }
      ]
    }
  ],
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "exec": [""],
        "type": "text/javascript"
      }
    },
    {
      "listen": "test",
      "script": {
        "exec": [""],
        "type": "text/javascript"
      }
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3001",
      "type": "string"
    },
    {
      "key": "adminToken",
      "value": "",
      "type": "string",
      "description": "Set this after login or use the Login request to automatically set it"
    }
  ]
}
